{% extends 'base.html.twig' %}

{% block title %}View{% endblock %}

{% block body %}
    <div class="card border-dark mt-4">
        <div class="card-header">
            <div class="row">
                <div class="col-10"><i class="fas fa-film icon"></i><b>{{ movie.title }}</b></div>
                <div class="col text-right">
                    <a class="btn btn-outline-dark btn-sm" href="/movies/edit/{{ movie.id }}"><i class="fas fa-pen"></i></a>
                    <a class="btn btn-outline-danger btn-sm" href="/movies/delete/{{ movie.id }}"><i class="fas fa-times"></i></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            {% if movie.description|length > 0 %}
                <p class="card-text">{{ movie.description }}</p>
            {% else %}
                <p class="card-text text-center">(no description)</p>
            {% endif %}
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <i class="fas fa-users icon"></i><b>Actors:</b> {{ movie.actors }}
                </div>
                <div class="col text-right">
                    <i class="fas fa-file-video icon"></i>{{ movie.format }}&nbsp;&nbsp;&nbsp;
                    <i class="fas fa-calendar-alt icon"></i>{{ movie.year }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="card bg-dark text-white mt-4">
        <div class="card-header">
            <div class="row">
                <div class="col-10"><i class="fas fa-film icon"></i><b>{{ movie.title }}</b></div>
                <div class="col text-right">
                    <a class="btn btn-primary btn-sm" href=""><i class="fas fa-pen"></i></a>
                    <a class="btn btn-danger btn-sm" href=""><i class="fas fa-times"></i></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">{{ movie.description }}</p>
        </div>
        <div class="row">
            <div class="col">
                <div class="card-footer text-white text-left"><i class="fas fa-users icon"></i><b>Actors:</b> {{ movie.actors }}</div>
            </div>
            <div class="col">
                <div class="card-footer text-white text-right"><i class="fas fa-calendar-alt icon"></i><b>Year:</b> {{ movie.year }}</div>
            </div>
        </div>
    </div>
{% endblock %}
